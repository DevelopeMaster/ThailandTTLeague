    <form action="/register" onsubmit="return validateForm()" method="POST" style="display: flex; color: #fff; gap: 0px; flex-direction: column; width: 150px;" enctype="application/x-www-form-urlencoded">
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" required><br>
        <label for="login">Логин:</label><br>
        <input type="text" id="login" name="login" required><br>
        <label for="password">Пароль:</label><br>
        <input type="password" id="password" name="password" required><br>
        <label for="confirm_password">Подтверждение пароля:</label><br>
        <input type="password" id="confirm_password" name="confirm_password" required><br>
        <label for="city">Город:</label><br>
        <select id="city" name="city">
            <!-- Здесь должен быть список городов Таиланда -->
        </select><br>
        <label for="fullname">Полное имя:</label><br>
        <input type="text" id="fullname" name="fullname" required><br>
        <label>Рука:</label><br>
        <input type="radio" id="left" name="hand" value="left">
        <label for="left">Левая</label><br>
        <input type="radio" id="right" name="hand" value="right">
        <label for="right">Правая</label><br>
        <label for="birthday">Дата рождения:</label><br>
        <input type="date" id="birthday" name="birthday" required><br>
        <input type="checkbox" id="policy" name="policy" required>
        <label for="policy">Я согласен с политикой конфиденциальности</label><br>
        <input type="submit" value="Зарегистрироваться">
    </form>



</body>
