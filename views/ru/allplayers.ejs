    <div class="navigate">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol id="breadcrumb" class="navigate_breadcrumb">
                    <!-- from js -->
                </ol>
            </nav>
        </div>
    </div>



    <section class="filterPlayers">
        <div class="container">
            <div class="contentWrapper">
                <h2>Поиск Игрока</h2>
                <div class="filterTournaments_filter">
                    <div class="filterTournaments_wrapper">
                        <div class="dropdownForm datesForm">
                            <label for="ratingFrom">Рейтинг</label>
                            <input type="text" name="ratingFrom" id="dateFromInput" placeholder="От">
                            <input type="text" name="ratingUntil" id="dateUntilInput" placeholder="До">
                        </div>
                        <div class="dropdownForm">
                            <label for="club">Имя / никнейм</label>
                            <input type="text" name="club" id="clubInput" placeholder="Имя игрока или никнейм">
                            <div id="clubDropdown" class="dropdown-content"></div>
                        </div>
                    </div>
                    <div class="filterTournaments_wrapper">
                        <div class="dropdownForm">
                            <label for="city">Поиск по городу</label>
                            <input type="text" name="city" id="cityInput" placeholder="Название города">
                            <div id="cityDropdown" class="dropdown-content"></div>
                        </div>
                        <button id="filterPlayers_btnSearch" class="header_btn-sign btnSbmt filterCoaches_sbmt" type="submit" fdprocessedid="c3chv">Найти</button>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

    <section class="players">
        <div class="container">
          <div class="contentWrapper">
            <h2>Список Игроков</h2>
            <div class="playersTable">
                <div class="playersTable_header">
                    <span class="player_number">№</span>
                    <span class="player_player">Имя игрока</span>
                    <span class="player_login">Никнейм</span>
                    <span class="player_city">Город</span>
                    <span class="player_rating">Рейтинг</span>
                </div>
                <div id="upcoming-tournaments" class="playersTable_content">
                    
                </div>
            </div>
          </div>
        </div>
    </section>






