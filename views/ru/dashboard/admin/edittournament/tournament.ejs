<body class="admin_body">
    <header class="admin_header" id="scroll">
        <!-- add from js -->
    </header>
    <div class="admin_sidebar">
        <!-- add from js -->
    </div>

    <section class="editPlayer editTournament" data-tournamentid="<%= tournamentId %>">
        <div class="adminContainer">
            <h2>Редактироване турнира</h2>
            <div class="buttonsTopWrapp">
                <a id="deleteTournamentBtnTop" class="deletePlayer" href="#">удалить</a>
                <button type="submit" id="saveTournamentBtnTop" class="header_btn-sign editclub_formContainer_submit">Сохранить</button>
            </div>

            <form id="editUserForm" action="/saveTournamentChanges" method="POST" enctype="multipart/form-data">
                <div class="editclub_formContainer">
                   
                    <div class="editclub_formContainer_formSection">
                        <label for="playerName">Клуб</label>
                        <input type="text" id="playerName" name="playerName" placeholder="В каком клубе проводится турнир?"  readonly>
                        
                        <label for="city">Город</label>
                        <input type="text" id="city" name="city" placeholder="Выбрать  город" readonly>
                       
                        <label for="ratinglimit">Ограничения по рейтингу</label>
                        <input type="text" id="ratinglimit" name="ratinglimit" placeholder="Ограничение по рейтингу">
                    
                        <label for="numberoftables">Количество столов</label>
                        <input type="text" id="numberoftables" name="numberoftables" placeholder="Количество столов"readonly>

                        <label for="start">Начало турнира</label>
                        <input type="text" id="starttournament" name="start" placeholder="Формат: 2025-01-01, 23:00">
                        
                        <label for="address">Адресс клуба (русский)</label>
                        <input type="text" name="address" id="clubAddress" placeholder="Адресс клуба" readonly>
            
                        <label for="phoneNumber">Номер телефона</label>
                        <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Номер телефона клуба" readonly>

                        <label for="deposit">Взнос на турнир</label>
                        <input type="text" id="deposit" placeholder="Взнос на турнир" name="deposit">
                                                  
                            
                        <div class="inp-label-pare">
                            <label for="info">Призовой фонд (Русский)</label>
                            <textarea id="description" placeholder="Информация об игроке на русском" id="info" name="info" rows="7" style="white-space: pre-wrap;"></textarea>
                        </div>

                        <div class="inp-label-pare">
                            <label for="infoeng">Призовой фонд (English)</label>
                            <textarea id="descriptionEng" placeholder="Информация об игроке на английском" id="infoEng" name="infoeng" rows="7" style="white-space: pre-wrap;"></textarea>
                        </div>

                        <div class="inp-label-pare">
                            <label for="infothai">Призовой фонд (Thai)</label>
                            <textarea id="descriptionThai" placeholder="Информация об игроке на тайском" id="infoThai" name="infothai" rows="7" style="white-space: pre-wrap;"></textarea>
                        </div>
                        
                        <label for="registeredplayers">Заявлено игроков</label>
                        <input type="text" id="registeredPlayers" placeholder="Колличество заявленых игроков" name="registeredplayers" readonly>
                        
                        <div class="registeredPlayersBlock">
                            <h3>Заявленные игроки</h3>
                            <div class="containerforRegistered">

                            </div>
                        </div>

                        <div class="addPlayersBlock">
                            <label for="addplayer">Добавить игрока на турнир</label>
                            <div class="clubs_down">
                                <input type="text" id="addPlayer" name="addplayer" placeholder="Добавить игрока" style="background-image: url('/icons/chevron-down.svg'); background-repeat: no-repeat; background-position: right 8px center; padding-right: 30px;">
                                <a id="addPlayerBtn" class="deletePlayer" href="#">Добавить</a>
                            </div>
                            <div class="dropdownForm" style="width: 88%">
                                <div class="dropdown-content" id="playerDropdown">
                                
                                </div>
                            </div>
                        </div>

                        <div class="retiredPlayersBlock">
                            <h3>Снявшиеся игроки</h3>
                            <div class="containerforRetired">

                            </div>
                        </div>
                        


                        <div class="admin_container_buttonsWrapper">
                            <div></div>
                            <div class="clubs_down">
                                <a id="deleteTournamentBtn" class="deletePlayer" href="#">удалить</a>
                                <button type="submit" id="saveTournamentBtn" class="header_btn-sign editclub_formContainer_submit">Сохранить</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            
        </div>
    </section>



    <!-- Модальное окно -->
    <div id="myModal" class="modal">    
        <div class="modal-content">
        <!-- add from DB -->
        </div>
