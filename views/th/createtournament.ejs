    <section class="addClub addTournament" data-userid="<%= userId %>">
        <div class="container">
            <div class="contentWrapper">
                <h2>สร้างทัวร์นาเมนต์</h2>
                <form class="addClub_form addTournament_form" id="addTournamentForm">
                    <div class="form_group">
                        <label for="tournamentname">Tournament name*</label>
                        <input placeholder="Name" type="text" id="tournamentName" name="tournamentname" required>
                    </div>
                    <div class="addClub_form_namePhone">
                        <div class="form_group">
                            <label for="tournamentdate">Tournament date*</label>
                            <input placeholder="Date" type="date" id="" name="tournamentdate" required>
                        </div>
                        <div class="form_group">
                            <label for="tournamenttime">Tournament time*</label>
                            <input placeholder="Time" type="time" id="phone" name="tournamenttime" required>
                        </div>
                        <div class="form_group">
                            <label for="tournamentprice">Tournament cost*</label>
                            <input placeholder="Price" type="text" id="city" name="tournamentprice" required>
                        </div>
                        
                    </div>
                    <div class="addClub_form_namePhone">
                        <div class="form_group">
                            <label for="ratinglimit">Rating limit*</label>
                            <input placeholder="Limit" type="text" id="name" name="ratinglimit" required>
                        </div>
                        <div class="form_group">
                            <label for="phone">Tournament organizer contact*</label>
                            <input placeholder="Phone number" type="tel" id="phone" name="phone" required>
                        </div>
                        
                    </div>
                    
                    <div class="form_group">
                        <label for="infotournaments">Prizes, awards</label>
                        <textarea placeholder="Prizes, awards for winning place in the tournament" id="infoTournaments" name="infotournaments" rows="7"></textarea>
                    </div>
                    
                    <button type="submit" class="header_btn-sign addTournament_form_btn">Create a tournament</button>
                </form>

            </div>
        </div>
    </section>


