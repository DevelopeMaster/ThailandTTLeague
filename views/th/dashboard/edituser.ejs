    <section class="player" data-userid="<%= userId %>" data-usertype="<%= userType %>">
        <div class="container">
            <div class="contentWrapper">
                <h2>ข้อมูลส่วนบุคคล</h2>
                <form id="editUserForm" action="/savePlayerProfile" method="POST" enctype="multipart/form-data">
                    <div class="editclub_formContainer">
                        <div class="editclub_formContainer_logoSection">
                            <img id="playerLogo" src="/icons/playerslogo/default_avatar.svg" alt="Player Logo">
                            <input type="file" id="logoInput" name="logo" style="display: none;">
                            <label for="logoInput" id="customLogoButton" class="editclub_formContainer_logoSection_btn">เพิ่มรูปภาพ</label>
                            <span class="remove-photo" onclick="removePhoto(event)"><img src="/icons/cross.svg" alt="cross"></span>
                        </div>
                        <div class="editclub_formContainer_formSection">
                            <label for="playerName">ชื่อผู้เล่น</label>
                            <input type="text" id="playerName" name="playerName" placeholder="กรอกชื่อและนามสกุลของคุณ"  required>
                            
                            
                            <label for="city">เมือง*</label>
                            <input type="text" id="city" name="city" placeholder="เลือกเมือง" style="background-image: url('/icons/chevron-down.svg'); background-repeat: no-repeat; background-position: right 8px center; padding-right: 30px;">
                            <div class="dropdownForm">
                                <div class="dropdown-content" id="cityDropdown">
                                <!-- options add from JS -->
                                </div>
                            </div>

                            <label for="city">ชื่อโค้ชหรือการเข้าสู่ระบบ</label>
                            <input type="text" id="coach" name="coach" placeholder="เลือกโค้ช" style="background-image: url('/icons/chevron-down.svg'); background-repeat: no-repeat; background-position: right 8px center; padding-right: 30px;">
                            <div class="dropdownForm">
                                <div class="dropdown-content" id="coachDropdown">
                                <!-- options add from JS -->
                                </div>
                            </div>

                            <label for="coachName">ชื่อของโค้ช (ถ้าไม่มีอยู่ในลิสต์)</label>
                            <input type="text" id="coachNameAdditional" name="coachName" placeholder="ชื่อและนามสกุลของโค้ช">
                            
                            <label for="date">วันเกิด</label>
                            <input type="text" name="date" id="date" placeholder="ป้อนวันที่" oninput="addDots(this)" maxlength="10" required>
                
                            <label for="email">อีเมลล์</label>
                            <input type="email" id="emailRegInput" placeholder="กรอกอีเมลล์" name="email" readonly>
                            <div id="emailError"  class="error-message"></div>

                            <label for="phoneNumber">Phone number</label>
                            <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number">

                            <label>มือที่เล่น</label>
                            <div class="hands">
                                <div class="hands_left">
                                    <input class="hands_radio" type="radio" id="left" name="hand" value="left" required>
                                    <label for="left">ซ้าย</label>
                                </div>
                                <div class="hands_right">
                                    <input class="hands_radio" type="radio" id="right" name="hand" value="right" required>
                                    <label for="right">ขวา</label>
                                </div>
                            </div>

                            <label for="city">ไม้ปิงปอง</label>
                            <input type="text" id="blade" name="blade" placeholder="เลือกไม้ปิงปอง" style="background-image: url('/icons/chevron-down.svg'); background-repeat: no-repeat; background-position: right 8px center; padding-right: 30px;">
                            <div class="dropdownForm">
                                <div class="dropdown-content" id="bladeDropdown">
                                <!-- options add from JS -->
                                </div>
                            </div>

                            <label for="city">ยางด้านหน้า</label>
                            <input type="text" id="forehand" name="forehand" placeholder="เลือกยาง" style="background-image: url('/icons/chevron-down.svg'); background-repeat: no-repeat; background-position: right 8px center; padding-right: 30px;">
                            <div class="dropdownForm">
                                <div class="dropdown-content" id="forehandDropdown">
                                <!-- options add from JS -->
                                </div>
                            </div>
                            <label for="city">ยางแบ็คแฮนด์</label>
                            <input type="text" id="backhand" name="backhand" placeholder="เลือกยาง" style="background-image: url('/icons/chevron-down.svg'); background-repeat: no-repeat; background-position: right 8px center; padding-right: 30px;">
                            <div class="dropdownForm">
                                <div class="dropdown-content" id="backhandDropdown">
                                <!-- options add from JS -->
                                </div>
                            </div>         
                                
                            <div class="inp-label-pare">
                                <label for="info">เกี่ยวกับฉัน</label>
                                <textarea id="description" placeholder="ข้อมูลสั้น ๆ เกี่ยวกับตัวคุณ" id="info" name="info" rows="7"></textarea>
                            </div>
                
                            <button class="header_btn-sign editclub_formContainer_submit" type="submit">บันทึก</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    

